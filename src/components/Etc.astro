---
import Image from '../shims/next/image';
import Link from '../shims/next/link';
import { etcList } from '../../app/constants/etc-list';

const currentYear = new Date().getFullYear();
---

<ul class="flex justify-around mx-auto my-16 mb-24 max-w-[69rem] px-8 w-[90%] max-tablet:flex-col max-tablet:mb-16 max-tablet:w-full max-mobile:mt-8">
  {etcList.map((item) => (
    <li>
      <Link
        className="text-[#005999] flex items-center gap-2 max-tablet:py-4"
        href={item.href}
        rel="noopener noreferrer"
        target="_blank"
      >
        <Image
          alt={''}
          height={26}
          src={`/img/etc/${item.className}.svg`}
          style={{
            width: '26px',
            height: '26px',
          }}
          width={26}
        />
        <span>{item.label}</span>
      </Link>
    </li>
  ))}
</ul>
