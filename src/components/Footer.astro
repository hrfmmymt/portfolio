---
import { etcList } from '../../app/constants/etc-list';

const currentYear = new Date().getFullYear();
---

<footer class="border-b-0 bg-white w-full p-8 px-4 md:p-16 md:px-8">
  <div class="max-w-[69rem] md:w-[90%] mx-auto">
