      {etcList.map((item) => (
        <li>
          <a
            class="text-[#005999] flex items-center gap-2 py-4 md:py-0"
            href={item.href}
            rel="noopener noreferrer"
            target="_blank"
          >
            <img
              alt=""
              height={26}
              src={`/img/etc/${item.className}.svg`}
              style="width: 26px; height: 26px;"
              width={26}
            />
            <span>{item.label}</span>
          </a>
        </li>
      ))}
    </ul>
