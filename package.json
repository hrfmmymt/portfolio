{
  "private": true,
  "name": "portfolio",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --template src/template.html",
    "serve": "npm run build && preact serve",
    "dev": "preact watch -p 4567 --template src/template.html",
    "deploy": "npm run build && netlify deploy -p build",
    "eslint": "eslint src",
    "fmt:js": "eslint src --quiet --fix",
    "fmt:css": "prettier --write 'src/**/*.css'"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-synacor": "^3.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "if-env": "^1.0.4",
    "json-server": "^0.12.1",
    "netlify-cli": "^1.2.2",
    "preact-cli": "^2.2.1",
    "prettier": "1.11.1"
  },
  "dependencies": {
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "preact-router": "^2.6.0",
    "react-scroll": "^1.7.8"
  }
}
